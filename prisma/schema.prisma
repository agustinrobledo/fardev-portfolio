// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Projects{
  id Int @id @default(autoincrement())
  updatedAt DateTime @updatedAt
  name String
  description String
  startDate String
  endDate String
  frontend String[]
  backend String[]
  img String?
  video String?
  projectType ProjectType
  github String?
}

enum ProjectType {
  FRONTEND
  BACKEND
  FULLSTACK
}

model Info{
  id Int @id @default(autoincrement())
  updatedAt DateTime @updatedAt
  mail String
  linkedin String
  githubProfile String
  frontend String[]
  backend String[]
}
